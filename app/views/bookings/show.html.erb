<div class="container my-3">

  <h2>Bookings - SHOW</h2>
  <br>

  <%= "#{@booking.datex.title} - #{@booking.fecha}" %>

  <br>
  <br>
  <%= button_to 'Delete Booking', booking_path(@booking), method: :delete %>
  <br>


  <div class="mt-3" data-controller="form-show">
    <button class="btn btn-primary mb-3" data-action="click->form-show#activar">Edit Booking</button>

    <div class="d-none mt-3 mb-3" data-form-show-target="showForm">
      <%= simple_form_for [@datex, @booking] do |f| %>

        <%= f.input :fecha,
                as: :string,
                input_html: {data: {controller: 'datepicker'}} %>
        <%= f.submit "Book", class: 'btn btn-primary' %>
      <% end %>
    </div>

  </div>
  <%= link_to 'Back to Bookings', bookings_path(@booking) %>
</div>
