<div class="container my-3">

  <h2>My Bookings</h2>
  <br>
<div class="card mb-3 p-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title"><%= @booking.datex.title %></h5>
        <p class="card-text"><%= @booking.fecha %></p>
        <%= button_to 'Delete Booking', booking_path(@booking), method: :delete, class: "btn btn-danger text-white" %>
        <div class="mt-3" data-controller="form-show">
    <button class="btn btn-primary mb-3" data-action="click->form-show#activar">Edit Booking</button>

    <div class="d-none mt-3 mb-3" data-form-show-target="showForm">
      <%= simple_form_for [@datex, @booking] do |f| %>

        <%= f.input :fecha,
                as: :string,
                input_html: {data: {controller: 'datepicker'}} %>
        <%= f.submit "Book", class: 'btn btn-primary' %>
      <% end %>
    </div>

  </div>
    </div>
</div>
  <br>



  <%= link_to 'Back to Bookings', bookings_path(@booking) %>
</div>
