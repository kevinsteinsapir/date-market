<%= simple_form_for [datex, review] do |f| %>
  <%= f.input :rating, collection: 1..5, prompt: "Select a rating" %>
  <%= f.input :comment %>
  <%= f.hidden_field :datex_id, value: datex.id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Create Review", class: "btn btn-success"%>
<% end %>
