<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="card-title"><%= @datex.title %></h1>
          <h4 class="card-subtitle text-muted mb-2"><%= @datex.category %></h4>
          <p class="card-text">
            <strong>Address:</strong> <%= @datex.address %><br>
            <strong>Price:</strong> $<%= @datex.price %><br>
            <strong>Guests:</strong> <%= @datex.guests %><br>
          </p>
          <p class="card-text"><%= @datex.content %></p>
          <p class="card-text">
            <% if @review_average %>
              <strong>Average Rating:</strong> <%= "⭐" * @review_average %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <h3>Reviews</h3>
      <% @reviews.each do |review| %>
        <div class="card mt-3 shadow-sm">
          <div class="card-body">
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= "⭐" * review.rating %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <%= link_to "Back to Home", datexes_path, class: "btn btn-primary" %>
      <%= link_to 'Edit', edit_datex_path(@datex) %> |
    </div>
  </div>
</div>

