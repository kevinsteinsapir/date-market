<div class="container">
  <h1>Dates</h1>
  <%= render "shared/categories" %>
  <div class="row">
    <% @datexes.each do |datex| %>
      <div class="col-md-4">
        <div class="card mt-3 shadow-sm fixed-height-card">
          <% if datex.photo.attached? %>
            <div class="card-img-top fixed-image-height"><%= cl_image_tag datex.photo.key, class: "rounded-top img-fluid card-image" %></div>
          <% else %>
            <div class="card-img-top fixed-image-height"><%= image_tag "date2.png", class: "rounded-top img-fluid card-image" %></div>
          <% end %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= link_to datex.title, datex_path(datex) %></h5>
            <div class="d-flex justify-content-start mt-auto">
              <div class="d-flex align-items-center ">
                <i class="fas fa-dollar-sign"></i>
                <p class="mb-0"><%= datex.price %></p>
              </div>
              <div class="d-flex align-items-center">
                <i class="fas fa-users m-1"></i>
                <p class="mb-0"><%= datex.guests %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Create a date", new_datex_path, class: "btn btn-primary mt-3" %>
  <div class="map-container"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
  >
  </div>
</div>
